<theme>

    <formatVersion>4</formatVersion>
    <include>./../spare.xml</include>

    <view name="system">
                <image name="background" extra="true">
                    <pos>0.5 0.5</pos>
                    <origin>0.5 0.5</origin>
                    <size>1 1</size>
                </image>
                <image name="layout" extra="true">
                    <pos>0 0</pos>
                    <origin>0 0</origin>
                    <size>1 1</size>
                    <path>./_inc/layout.png</path>
                </image>
                <image name="Promo" extra="true">
                    <pos>0 0</pos>
                    <origin>0 0</origin>
                    <size>1 1</size>
                    <path>./_inc/promo.png</path>
                </image>
                <video name="background" extra="true">
                     <origin>0 0</origin>
                     <pos>0 0</pos>
                     <maxSize>1 1</maxSize>
                     <delay>0.3</delay>
               	     <showSnapshotNoVideo>true</showSnapshotNoVideo>
		     <showSnapshotDelay>true</showSnapshotDelay>
                     <path>./_inc/background.mp4</path>
                </video>                
    </view>
    <view name="system, basic, detailed, grid">
                <image name="logo">
                   <path>./_inc/logo.png</path>
                </image>
    </view>
 
    <view name="video">
        <image name="crt" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./_inc/crt.png</path>
        </image>
    </view>
    
    
    <view name="video">
        <image name="frame" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./_inc/frame.png</path>
        </image>
    </view>
    <view name="basic"></view>
    <view name="detailed"></view>
    <view name="video"></view>

</theme>